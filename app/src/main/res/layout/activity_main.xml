<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/framelay1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/Linear1Lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="170dp"
                android:layout_marginTop="160dp"
                android:text="@string/_1"
                android:textAlignment="center"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="318dp"
                android:layout_height="178dp"
                android:layout_marginStart="45dp"
                android:contentDescription="@string/todo"
                tools:srcCompat="@drawable/image10" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="LeftClick"
                    android:text="@string/prev" />

                <Button
                    android:id="@+id/button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="145dp"
                    android:onClick="RightClick"
                    android:text="@string/next" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/todo"
                    android:onClick="OnImageClick"
                    app:srcCompat="@drawable/image10"
                    tools:srcCompat="@drawable/image10" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/todo"
                    android:onClick="OnImageClick"
                    app:srcCompat="@drawable/image9"
                    tools:srcCompat="@drawable/image9" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/todo"
                    android:onClick="OnImageClick"
                    app:srcCompat="@drawable/image8"
                    tools:srcCompat="@drawable/image8" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/todo"
                    android:onClick="OnImageClick"
                    app:srcCompat="@drawable/image7"
                    tools:srcCompat="@drawable/image7" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/todo"
                    android:onClick="OnImageClick"
                    app:srcCompat="@drawable/image6"
                    tools:srcCompat="@drawable/image6" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/todo"
                    android:onClick="OnImageClick"
                    app:srcCompat="@drawable/image5"
                    tools:srcCompat="@drawable/image5" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/todo"
                    android:onClick="OnImageClick"
                    app:srcCompat="@drawable/image4"
                    tools:srcCompat="@drawable/image4" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/todo"
                    android:onClick="OnImageClick"
                    app:srcCompat="@drawable/image3"
                    tools:srcCompat="@drawable/image3" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/todo"
                    android:onClick="OnImageClick"
                    app:srcCompat="@drawable/image2"
                    tools:srcCompat="@drawable/image2" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/todo"
                    android:onClick="OnImageClick"
                    app:srcCompat="@drawable/image1" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>